<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>作品追加</h2>
    </div>
    <div class="col">
      <h2>作品一覧</h2>
    </div>
  </div>
  <%= form_with model: @spot, url: admin_spots_path, method: :post do |f| %>
  <div class="row">
    <div class="col-md-4">
      <div class="mt-5">
        <h5>スポット名</h5>
      </div>
      <div>
        <%= f.text_field :name, size: 40 %>
      </div>
      <div class="mt-3">
        <%= f.file_field :spot_image %>
      </div>
      <div class="mt-3">
        <h5>住所</h5>
      </div>
      <div>
        <%= f.text_field :address, size: 40 %>
      </div>
      <div class="mt-3">
        <h5>概要</h5>
      </div>
      <div>
        <%= f.text_area :summary, cols: 45, rows: 10 %>
      </div>
      <div class="mt-3">
        <%= f.submit "スポットを登録", class: "btn btn-success" %>
      </div>
    </div>
