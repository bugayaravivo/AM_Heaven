<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h1 style="border-bottom: 2px solid gold; padding-bottom: 10px"><%= @user.name %>さんのコメント一覧</h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-3">
      <%= link_to "コメントを全削除", destroy_all_admin_user_path(@user.id), method: :delete, data: { confirm: "本当に全て削除しますか？" }, class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>コメント内容</th>
            <th>感情スコア</th>
            <th>投稿日</th>
            <th>削除ボタン</th>
          </tr>
        </thead>
        <% @comments.each do |comment| %>
          <tbody>
            <tr>
              <td>
                <div style="max-height: 100px; max-width: 700px; overflow-y: auto;">
                  <pre><%= comment.body %></pre>
                </div>
              </td>
              <td><%= comment.score %></td>
              <td><%= comment.created_at.strftime("%Y-%m-%d") %></td>
              <td><%= link_to "コメントを削除", admin_user_comment_path(comment.user_id, comment.id), method: :delete, data: { confirm: "本当にこのコメントを削除しますか？" }, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div class=" mb-5 d-flex justify-content-center">
        <%= paginate @comments %>
      </div>
    </div>
  </div>
</div>