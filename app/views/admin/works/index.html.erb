<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>作品追加</h2>
    </div>
    <div class="col">
      <h2>作品一覧</h2>
    </div>
  </div>
  <%= form_with model: @work, url: admin_works_path, method: :post do |f| %>
  <div class="row">
    <div class="col-md-4">
      <div class="mt-5">
        <h5>作品名</h5>
      </div>
      <div>
        <%= f.text_field :title, size: 40 %>
      </div>
      <div class="mt-3">
        <%= f.file_field :work_image %>
      </div>
      <div class="mt-3">
        <h5>ジャンル</h5>
      </div>
      <div>
        <%= f.text_field :genre, size: 40 %>
      </div>
      <div class="mt-3">
        <h5>概要</h5>
      </div>
      <div>
        <%= f.text_area :summary, cols: 45, rows: 10 %>
      </div>
      <div class="mt-3">
        <%= f.submit "作品を登録", class: "btn btn-success" %>
      </div>
    </div>
    <div class="col-md-7 offset-md-1">
      <% @works.each do |work| %>
      <div class="card mt-5" style="background-color: #dcdcdc;">
        <div class="card-body">
          <!-- ここに作品の一覧表示 -->
          <h5 class="card-title">
            <%= link_to work.title, admin_work_path(work.id), class: "text-dark" %>
          </h5>
          <p class="card-text">
            <%= work.genre %>
          </p>
          <p class="card-text">
            <%= work.summary %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>