<div class="container my-5 d-flex justify-content-center">
  <div class="card" style="width: 25rem;">
    <div class="card-header text-center">
      <h3>管理者ログイン</h3>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力してください" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワードを入力してください" %>
        </div>
        
        <div class="actions mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
