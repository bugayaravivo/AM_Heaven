<div class="container my-5">
  <div class="row justify-content-center">
    <!-- ログインカード -->
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-header text-center">
          <h3>会員ログイン</h3>
        </div>
        <div class="card-body">
          <!--エラーメッセージ-->
          <% if flash[:alert].present? %>
            <div class="alert alert-danger" style="border-radius: 10px;">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <% if flash[:notice].present? %>
            <div class="alert alert-success" style="border-radius: 10px;">
              <%= flash[:notice] %>
            </div>
          <% end %>
      
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
            <div class="form-group">
              <%= f.label "メールアドレス", class: 'col-form-label' %>
              <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label "パスワード", class: 'col-form-label' %>
              <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>

            <div class="form-group mt-3 text-center">
              <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
            </div>
            <div class="mt-3 text-center">
              <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: 'btn btn-secondary btn-block' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>