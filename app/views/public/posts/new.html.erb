<div class="container">
  <%= form_with model: @post, url: posts_path, method: :post do |f| %>
  <div class="row mt-5">
    <div class="col-md-4 offset-md-3">
      <div>
        <p>聖地の名前</p>
      </div>
      <%= f.text_field :title, placeholder: '聖地の名前', size: 70 %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 offset-md-3">
      <div>
        <p>聖地の住所</p>
      </div>
      <%= f.text_field :address, placeholder: '聖地の住所 ※必須ではありません' , size: 70%>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 offset-md-3">
      <div>
        <p>画像を追加</p>
      </div>
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 offset-md-3">
      <div>
        <p>本文</p>
      </div>
      <%= f.text_area :body, placeholder: '行った聖地の口コミ、感想を書いてみよう', cols: 70, rows: 15 %>
    </div>
  </div><div class="row mt-3">
    <div class="col d-flex justify-content-center">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>