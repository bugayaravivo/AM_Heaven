<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>スポット追加</h2>
      <div>
        <% if @spot.errors.any? %>
          <%= @spot.errors.count %>件のエラーが発生しました
          <ul>
            <% @spot.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="col">
      <h2>聖地一覧</h2>
    </div>
  </div>
  <%= form_with model: @spot, url: admin_spots_path, method: :post do |f| %>
    <div class="row mb-5">
      <div class="col-md-4">
        <div class="mt-5">
          <h5>聖地名</h5>
        </div>
        <div>
          <%= f.text_field :name, size: 40 %>
        </div>
        <div class="mt-3">
          <h5>関連する作品</h5>
        </div>
        <div>
          <%= f.collection_select :work_id, Work.all, :id, :title, prompt: "作品を選んでください", size: 40 %>
        </div>
        <div class="mt-3">
          <h5>画像</h5>
        </div>
        <div>
          <%= f.file_field :spot_image %>
        </div>
        <div class="mt-3">
          <h5>住所</h5>
        </div>
        <div>
          <%= f.text_field :address, size: 40 %>
        </div>
        <div class="mt-3">
          <h5>概要</h5>
        </div>
        <div>
          <%= f.text_area :summary, cols: 45, rows: 10 %>
        </div>
        <div class="mt-3">
          <%= f.submit "聖地を登録", class: "btn btn-success" %>
        </div>
      </div>
      <div class="col-md-6 offset-md-2">
        <% @spots.each do |spot| %>
        <div class="card mt-5" style="background-color: #dcdcdc;">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to spot.name, admin_spot_path(spot.id), class: "text-dark" %>
            </h5>
            <p class="card-text">
              関連作品：<%= spot.work.title %>
            </p>
            <p class="card-text">
              住所：<%= spot.address %>
            </p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
