<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2><%= @user.name %>さんの会員情報編集</h2>
    </div>
  </div>
  <%= form_with model: @user, url: admin_user_path(@user.id), methd: :patch do |f| %>
  <div class="row mt-5">
    <div class="col d-flex justify-content-center">
      <%= image_tag @user.get_user_image(150,150), style: "border-radius: 50%; border: 5px solid gold;", width: 150, height: 150 %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col offset-md-3">
      <p>名前</p>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <%= f.text_field :name, size: 60 %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col offset-md-3">
      <p>プロフィール</p>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <%= f.text_area :introduction, cols: 65, rows: 10 %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col offset-md-3">
      <p>会員ステータス</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-md-3 d-flex justify-content-center">
      <%= f.radio_button :is_active, :true %> <%= f.label :is_active, "有効", { value: :true } %>
    </div>
    <div class="col-md-3  d-flex justify-content-center">
      <%= f.radio_button :is_active, :false %> <%= f.label :is_active, "退会", { value: :false } %>
    </div>
  </div>
  <div class="row mt-4 mb-5">
    <div class="col d-flex justify-content-center">
      <%= f.submit "変更を保存する", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>