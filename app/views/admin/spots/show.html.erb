<div class="container">
  <div class="row mt-5">
    <div class="col-md-8">
      <h1>聖地詳細</h1>
    </div>
    <div class="col-md-4">
      <%= link_to "＋", admin_spots_path, class: "btn btn-secondary arounded-circle border" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <h2 class="mt-3"><%= @spot.name %></h2>
      <div class="mt-1 ml-3">
        <p class="text-muted">関連作品：<%= @spot.work.title %></p>
      </div>
    </div>
  </div>
  <div class="row mt-4 ml-4">
    <div class="col-md-5">
      <div class="d-flex justify-content-center">
        <%= image_tag @spot.get_spot_image(300,250) %>
      </div>
      <div class="mt-3 d-flex justify-content-center">
        <%= link_to "聖地編集", edit_admin_spot_path(@spot.id), class: "btn btn-success mr-3" %>
        <%= link_to "聖地削除", admin_spot_path(@spot.id), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
      </div>
    </div>
    <div class="col-md-5 offset-md-1">
      <div id="map" data-lat="<%= @spot.latitude %>" data-lng="<%= @spot.longitude %>"></div>
    </div>
  </div>
  <div class="row my-5">
    <div class="col">
      <div class="card">
        <h5>聖地概要</h5>
        <p><%= @spot.summary %></p>
      </div>
    </div>
  </div>
  <%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
</div>
